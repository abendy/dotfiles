#!/bin/sh
#
# Nukes a branch locally and on the origin remote.
#
# $1 - Branch name.
#
# Examples
#
#   git nuke add-git-nuke

read -p "This will nuke the branch $1. Are you sure? (y/n) " -n 1
echo "\n"
if [[ $REPLY =~ ^[Yy]$ ]]; then
  git checkout master
  git branch -D $1
  git push origin :$1
fi
