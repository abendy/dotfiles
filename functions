#!/usr/bin/env zsh

# All the dig info
function digga() {
  dig +nocmd "$1" any +multiline +noall +answer
}

# `e` with no arguments opens the current directory in Sublime Text, otherwise
# opens the given location
function e() {
  if [ $# -eq 0 ]; then
    code .;
  else
    code "$@";
  fi;
}

# credit: http://nparikh.org/notes/zshrc.txt
